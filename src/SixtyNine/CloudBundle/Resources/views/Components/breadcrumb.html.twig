{%  if breadcrumb is defined %}
<ol class="breadcrumb">
    {% for item in breadcrumb %}
        <li {% if loop.last %}class="active"{% endif %}>
            {% if item.url is defined %}
            <a href="{{ item.url }}">
            {% endif %}
            {{ item.title }}
            {% if item.url is defined %}
            </a>
            {% endif %}
        </li>
    {% endfor %}
</ol>
{% endif %}
