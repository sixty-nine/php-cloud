{% extends 'SixtyNineCloudBundle::layout.html.twig' %}

{% set curPage = 'palette' %}
{% set pageTitle = 'Settigns' | trans %}
{% set pageHeader = 'Settings' | trans %}
{% set pageSubHeader = 'Palettes' | trans  %}

{% block body %}
    <section class="palettes">
        {% for palette in palettes %}
            <div class="palette">
                <div class="name">{{ palette.name }}</div>
                <div class="colors">
                    {% for color in palette.colors %}
                        <div style="background-color: #{{ color }};"></div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </section>
{% endblock %}

{% block javascripts %}
{% endblock %}
