<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="SixtyNine\CloudBundle\Entity\WordsList" table="words_list"
            repository-class="SixtyNine\CloudBundle\Repository\WordsListRepository">
        <indexes>
            <index name="IDX_B7304688A76ED395" columns="user_id"/>
        </indexes>
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="name" type="string" column="name" length="255" nullable="false">
            <options>
                <option name="fixed"/>
            </options>
        </field>
        <field name="createdAt" type="datetime">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" type="datetime">
            <gedmo:timestampable on="update"/>
        </field>
        <field name="createdBy" type="string" nullable="true">
            <gedmo:blameable on="create"/>
        </field>
        <field name="updatedBy" type="string" nullable="true">
            <gedmo:blameable on="update"/>
        </field>
        <many-to-one field="user" target-entity="Account" fetch="LAZY">
            <join-columns>
                <join-column name="user_id" referenced-column-name="id"/>
            </join-columns>
        </many-to-one>
        <one-to-many field="words" target-entity="Word" mapped-by="list">
            <order-by>
                <order-by-field name="position" direction="ASC"/>
            </order-by>
        </one-to-many>
    </entity>
</doctrine-mapping>
