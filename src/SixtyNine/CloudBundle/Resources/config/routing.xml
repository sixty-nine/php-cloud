<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="sn_cloud_home" path="/" methods="GET">
        <default key="_controller">SixtyNineCloudBundle:Default:index</default>
    </route>

    <import resource="@SixtyNineCloudBundle/Resources/config/routing/cloud.xml" prefix="/cloud" />
    <import resource="@SixtyNineCloudBundle/Resources/config/routing/words.xml" prefix="/words" />
    <import resource="@SixtyNineCloudBundle/Resources/config/routing/palettes.xml" prefix="/palettes" />

</routes>
